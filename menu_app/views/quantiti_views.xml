        <field name="domain">[('state', '=',  'RD')]</field> 
        <field name="view_mode">tree</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('menu_app.quantiti_list')}),
