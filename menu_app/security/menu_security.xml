<odoo>
    <record id="module_menu_category" model="ir.module.category">
        <field name="name">Menu</field>
    </record>
    <record id="group_waiter" model="res.groups">
        <field name="name">Waiter</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="module_menu_category"/>
    </record>
    <record id="group_cooker" model="res.groups">
        <field name="name">Cooker</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="module_menu_category"/>
    </record>        
    <record id="group_admin" model="res.groups">
        <field name="name">Admin</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="module_menu_category"/>
    </record>       
</odoo>